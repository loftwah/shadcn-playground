---
import "../styles/fontawesome.css";
// No imports needed for this simple footer
---

<footer class="border-t py-6 md:px-8 md:py-0">
  <div
    class="container flex flex-col items-center justify-between gap-4 md:h-24 md:flex-row"
  >
    <p
      class="text-muted-foreground text-center text-sm leading-loose md:text-left"
    >
      &copy; {new Date().getFullYear()} Dean Lofts. All rights reserved.
    </p>
    <div class="flex items-center space-x-4">
      <a href="https://github.com/loftwah" target="_blank" rel="noreferrer" class="text-muted-foreground hover:text-foreground">
        <span class="sr-only">GitHub</span>
        <i class="fa-brands fa-github h-5 w-5"></i>
      </a>
      <a href="https://twitter.com/loftwah" target="_blank" rel="noreferrer" class="text-muted-foreground hover:text-foreground">
        <span class="sr-only">Twitter</span>
        <i class="fa-brands fa-x-twitter h-5 w-5"></i>
      </a>
      <a href="https://linkedin.com/in/deanlofts" target="_blank" rel="noreferrer" class="text-muted-foreground hover:text-foreground">
        <span class="sr-only">LinkedIn</span>
        <i class="fa-brands fa-linkedin h-5 w-5"></i>
      </a>
    </div>
  </div>
</footer>